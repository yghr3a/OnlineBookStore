@{
    Layout = null;
    var orderId = ViewData["OrderId"];
}

<!doctype html>
<html lang="zh">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
            background: #f5f6fa;
            display: flex;
            justify-content: center;
        }

        .container {
            width: 100%;
            max-width: 420px;
            padding: 20px;
            margin-top: 40px;
            background: #fff;
            border-radius: 12px;
            text-align: center;
            box-shadow: 0 4px 10px rgba(0,0,0,0.05);
        }

        h2 {
            color: #e74c3c;
            margin-bottom: 10px;
        }

        p {
            font-size: 1.1rem;
            color: #333;
            margin-bottom: 30px;
        }

        .btn {
            display: inline-block;
            padding: 12px 20px;
            background: #3498db;
            color: #fff;
            border-radius: 8px;
            text-decoration: none;
            font-size: 1rem;
        }

            .btn:active {
                transform: scale(0.97);
            }
    </style>
</head>

<body>
    <div class="container">
        <h2>支付失败</h2>
        <p>订单 <strong>@orderId</strong> 支付失败，请重新尝试。</p>
    </div>
</body>
</html>
