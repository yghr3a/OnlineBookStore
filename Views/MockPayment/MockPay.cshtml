@{
    Layout = null;
    var token = ViewData["Token"];
    var orderId = ViewData["OrderId"];
    var amount = ViewData["Amount"];
    var amountString = ViewData["AmountString"];
}
<!doctype html>
<html lang="zh">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
            background: #f5f6fa;
            display: flex;
            justify-content: center;
        }

        .container {
            width: 100%;
            max-width: 420px;
            padding: 20px;
            margin-top: 40px;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
            text-align: center;
        }

        h2 {
            font-size: 1.4rem;
            margin-bottom: 10px;
            color: #333;
        }

        p {
            font-size: 1.2rem;
            margin-bottom: 25px;
        }

        button {
            width: 100%;
            padding: 14px 0;
            font-size: 1.1rem;
            border: none;
            border-radius: 8px;
            margin-bottom: 15px;
            cursor: pointer;
        }

        .success-btn {
            background: #4caf50;
            color: #fff;
        }

        .fail-btn {
            background: #e74c3c;
            color: #fff;
        }

        button:active {
            transform: scale(0.97);
        }
    </style>
</head>

<body>
    <div class="container">
        <h2>模拟支付平台 - 订单 @orderId</h2>
        <p>金额：@amountString</p>

        <form method="post" action="/mockpay/@token/pay">
            <button class="success-btn" name="result" value="success">确认支付成功</button>
            <button class="fail-btn" name="result" value="fail">模拟支付失败</button>
        </form>
    </div>
</body>
</html>
