@page
@model IndexModel
@{
    ViewData["Title"] = "OnlineBookStore后台导航页面";
}

<style>
    .page-container {
        max-width: 1000px;
        margin: 15px auto;
        padding: 15px;
        background-color: #ffffff;
        box-shadow: 0 1px 6px rgba(0,0,0,0.20);
        border-radius: 6px;
        font-size: 14px;
        color: #333;
        font-family: "Segoe UI", Tahoma, sans-serif;
    }

    .page-container-title {
        font-size: 20px;
        margin-bottom: 12px;
        color: #2d2d2d;
        font-weight: 600;
        padding-bottom: 6px;
        border-bottom: 2px solid #e2e2e2;
    }

    /* 用户信息区域 */
    .user-info-flex {
        display: flex;
        gap: 20px;
        align-items: center;
    }

    .user-image {
        width: 120px;
        height: 120px;
        border-radius: 6px;
        object-fit: cover;
        box-shadow: 0 1px 4px rgba(0,0,0,0.15);
    }

    .user-info-text {
        display: flex;
        flex-direction: column;
        gap: 6px;
        font-size: 15px;
    }

        .user-info-text div span {
            font-weight: 600;
            color: #444;
        }

    /* 导航按钮区域 */
    .nav-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 16px;
        margin-top: 10px;
    }

    .nav-item {
        display: block;
        padding: 14px;
        background-color: #fafafa;
        border-radius: 6px;
        text-align: center;
        font-size: 15px;
        color: #333;
        text-decoration: none;
        box-shadow: 0 1px 4px rgba(0,0,0,0.08);
        transition: all 0.2s ease;
    }

        .nav-item:hover {
            box-shadow: 0 2px 8px rgba(0,0,0,0.18);
            color: #0d6efd;
        }

    /* 退出登录按钮视觉略有区分 */

    .login-btn {
        width: 100%;
        padding: 12px;
        font-size: 17px;
        background-color: #51a8ff;
        border: none;
        color: white;
        border-radius: 6px;
        cursor: pointer;
    }

        .login-btn:hover {
            background-color: #2f94ff;
        }

</style>


<!-- ========================================================= -->
<!-- 功能页面导航栏 -->
<!-- ========================================================= -->
<div class="page-container">
    <div class="page-container-title">功能页面导航栏</div>

    <div class="nav-grid">
        <a href="/Admin/Books/Index" class="nav-item">书籍列表页面</a>
        <a href="/Admin/User/Index" class="nav-item">用户列表页面</a>
        <a href="/Admin/Order/Index" class="nav-item">订单列表页面</a>
        <a href="/Admin/Cart/Index" class="nav-item">购物车列表信息</a>
    </div>
</div>

<!-- =======================
     退出登录区域
======================== -->
<div class="page-container">
    <form method="post">
        <div class="page-container-title">
            退出登录
        </div>

        <div class="nav-grid">


            <button type="submit" class="login-btn">
                退出登录
            </button>


        </div>
    </form>
</div>

